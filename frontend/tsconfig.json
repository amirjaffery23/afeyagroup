{
  "files": [],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.app.json" }
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": false, // Set to true only if necessary
    "baseUrl": ".",
    "paths": {
    "@/*": ["src/*"]
    }
  },
  
    "include": ["src/**/*.d.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
  
  
}


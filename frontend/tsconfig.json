{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/shims-vue.d.ts"],
  "exclude": ["node_modules", "dist"]
}




